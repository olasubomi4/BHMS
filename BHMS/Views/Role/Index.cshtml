@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="section-padding">
    <h2>Available Roles</h2>
    <br /><br />
    <section class="col-sm-6">
        <table class="table-bordered">
            @Html.ActionLink("Create Role", "Create", "Role", new { @class = "btn btn-primary btn-sm btn block" })
        </table>
    </section>
    <section class="col-sm-6">
        <table class="table-bordered">

            @Html.ActionLink("Assign role", "RegisterRole", "Account")
            @Html.ActionLink("Assign role to User", "RegisterRole", "Account", new { @class = "btn btn-primary btn-sm btn block" })
        </table>
    </section>
    <br /> <br />

    <table class="table table-bordered table-hover">
        <tr>
            <th>Role Name</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Name</th>
            </tr>
        }
    </table>
</div> 
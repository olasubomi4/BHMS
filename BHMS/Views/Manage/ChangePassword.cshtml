                    @Html.ValidationSummary("", new { @class = "errMessageOldPass" })@*
            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "errMessageOldPass" })*@


                    <span class="changepassword19426-text09">
                        <span class="changepassword19426-text10">New Password</span>
                    </span>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "changepassword19426-svg2" })
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "errMessageNewPass" })


                    <span class="changepassword19426-text07">
                        <span class="changepassword19426-text08">Confirm New Password</span>
                    </span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "changepassword19426-svg1" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "asdz" })

                    <input type="submit" value="Change password" class="changepassword19426-group7019451" />


                }

            </div>
        </div>
    </div>

@model IEnumerable<BHMS.CORE.Models.VidUpload>

@{
    ViewBag.Title = "Uploaded videos";
}

<h2>Index</h2>
<br />
<br />
<p>
    @Html.ActionLink("Upload a new video", "UploadVideo")
</p>
@{

    if (ViewBag.resultt == "yes")
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Uploadtumb)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemDescription)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img class="img-thumbnail" style="height:50px" src="@Html.Raw(item.Uploadtumb)" />
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemDescription)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>



                </tr>
            }

        </table>

    }
    else
   {
    <p> You have not uploaded any item</p>
    }
}

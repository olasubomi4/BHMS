@model BHMS.CORE.Models.ItemCategory
<link rel="stylesheet" href="~/assets/regPage/fonts/material-icon/css/material-design-iconic-font.min.css">
<link rel="stylesheet" href="~/assets/regPage/css/styleReg.css">



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="main">

        <div class="containerr">
            <h2>Create An Item Category</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h2>Registration Form</h2>
            <div class="form-group-1">

                <div class="form-horizontal">
                    <h4>ItemCategory</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.CreatedAt, htmlAttributes: new { @class = "control-label col-md-2 text-dark" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CreatedAt, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2 text-dark" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/assets/regPage/vendor/jquery/jquery.min.js"></script>
<script src="~/assets/regPage/js/mainReg.js"></script>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
